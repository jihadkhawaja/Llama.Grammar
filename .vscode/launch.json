{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Blazor WebAssembly",
            "type": "blazorwasm",
            "request": "launch",
            "cwd": "${workspaceFolder}/Llama.Grammar.WebApp",
            "browser": "chrome",
            "url": "https://localhost:7101",
            "webRoot": "${workspaceFolder}/Llama.Grammar.WebApp/wwwroot"
        },
        {
            "name": "Run Tests",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "dotnet",
            "args": ["test", "${workspaceFolder}/Llama.Grammar.Test/Llama.Grammar.Test.csproj"],
            "cwd": "${workspaceFolder}",
            "console": "internalConsole"
        }
    ],
    "compounds": [
        {
            "name": "Launch WebApp with Build",
            "configurations": ["Launch Blazor WebAssembly"],
            "preLaunchTask": "build"
        }
    ]
}
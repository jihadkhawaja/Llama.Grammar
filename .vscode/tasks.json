{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/Llama.Grammar.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary;ForceNoAlign"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/Llama.Grammar.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary;ForceNoAlign"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/Llama.Grammar.sln"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch-webapp",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/Llama.Grammar.WebApp/Llama.Grammar.WebApp.csproj"
            ],
            "group": "build",
            "isBackground": true,
            "problemMatcher": [
                {
                    "owner": "csharp",
                    "fileLocation": "absolute",
                    "pattern": {
                        "regexp": "^(.*)\\((\\d+,\\d+)\\):\\s+(error|warning|info)\\s+(\\w{1,2}\\d+):\\s+(.*)$",
                        "file": 1,
                        "location": 2,
                        "severity": 3,
                        "code": 4,
                        "message": 5
                    },
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": "^\\s*Detecting changes",
                        "endsPattern": "^\\s*Application started\\.|^\\s*Application is shutting down\\."
                    }
                }
            ],
            "options": {
                "cwd": "${workspaceFolder}/Llama.Grammar.WebApp"
            }
        },
        {
            "label": "test",
            "command": "dotnet",
            "type": "process",
            "args": [
                "test",
                "${workspaceFolder}/Llama.Grammar.Test/Llama.Grammar.Test.csproj"
            ],
            "group": "test",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "npm-install-react",
            "type": "shell",
            "command": "npm",
            "args": ["install"],
            "options": {
                "cwd": "${workspaceFolder}/ReactApp"
            },
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "start-react",
            "type": "shell",
            "command": "npm",
            "args": ["start"],
            "options": {
                "cwd": "${workspaceFolder}/ReactApp"
            },
            "group": "build",
            "isBackground": true,
            "dependsOn": "npm-install-react",
            "problemMatcher": [
                {
                    "pattern": [
                        {
                            "regexp": ".",
                            "file": 1,
                            "location": 2,
                            "message": 3
                        }
                    ],
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": "^.*webpack compiled.*",
                        "endsPattern": "^.*Local:.*|^.*On Your Network:.*"
                    }
                }
            ]
        },
        {
            "label": "start-blazor-and-react",
            "dependsOrder": "sequence",
            "dependsOn": [
                "build",
                "watch-webapp",
                "start-react"
            ],
            "group": "build",
            "problemMatcher": []
        }
    ]
}
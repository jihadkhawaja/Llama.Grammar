            <MudListItem T="string" Icon="Icons.Material.Filled.ViewList" Text="Arrays and array constraints" />
            <MudListItem T="string" Icon="Icons.Material.Filled.List" Text="Enums and constants" />
            <MudListItem T="string" Icon="Icons.Material.Filled.Star" Text="Required fields" />
            <MudListItem T="string" Icon="Icons.Material.Filled.Pattern" Text="Pattern matching" />
            <MudListItem T="string" Icon="Icons.Material.Filled.QuestionMark" Text="Nullable types" />
        </MudList>
    </MudItem>
</MudGrid>


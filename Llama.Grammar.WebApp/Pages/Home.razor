            <MudListItem T="string" Icon="Icons.Material.Filled.Psychology" Text="Converts JSON Schema to GBNF" />
            <MudListItem T="string" Icon="Icons.Material.Filled.CheckCircle" Text="Supports complex schema features:" />
        </MudList>
    </MudItem>
    <MudItem xs="12" md="6">

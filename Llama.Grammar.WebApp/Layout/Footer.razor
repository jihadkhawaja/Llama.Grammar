<MudPaper Class="pa-4 mt-8" Elevation="1">
    <MudContainer MaxWidth="MaxWidth.Large">
        <MudGrid>
            <MudItem xs="12" md="6">
                <MudText Typo="Typo.h6" GutterBottom="true">Llama.Grammar</MudText>
                <MudText Typo="Typo.body2" Class="mud-text-secondary">
                    Convert JSON Schemas, C# types, and regular expressions to GBNF grammars for AI models.
                </MudText>
            </MudItem>
            <MudItem xs="12" md="6" Class="d-flex justify-end align-center">
                <MudStack Row="true" Spacing="2">
                    <MudButton Href="https://github.com/jihadkhawaja/Llama.Grammar" Target="_blank"
                               Color="Color.Info" Variant="Variant.Outlined" StartIcon="Icons.Custom.Brands.GitHub">
                        View on GitHub
                    </MudButton>
                    <MudButton Href="https://www.nuget.org/packages/Llama.Grammar" Target="_blank"
                               Color="Color.Success" Variant="Variant.Outlined" StartIcon="Icons.Material.Filled.Download">
                        NuGet Package
                    </MudButton>
                </MudStack>
            </MudItem>
        </MudGrid>
        <MudDivider Class="my-3" />
        <MudText Typo="Typo.caption" Align="Align.Center" Class="mud-text-secondary">
            © @DateTime.Now.Year Llama.Grammar. Built with MudBlazor and .NET.
        </MudText>
    </MudContainer>
</MudPaper>
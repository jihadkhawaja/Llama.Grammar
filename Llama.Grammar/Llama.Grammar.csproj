	<Copyright>Copyright © 2025 jihadkhawaja</Copyright>
	<RepositoryUrl>https://github.com/jihadkhawaja/Llama.Grammar</RepositoryUrl>
	<PackageProjectUrl>https://github.com/jihadkhawaja/Llama.Grammar</PackageProjectUrl>
	<PackageTags>llama, gbnf, converter, json, grammar, llama grammar, llama gbnf, C# llama grammar</PackageTags>
	<Version>1.0.2</Version>
  </PropertyGroup>

	<ItemGroup>
		<None Include="..\README.md" Pack="true" PackagePath="" />
		<None Include="..\LICENSE.md" Pack="true" PackagePath="" />
	</ItemGroup>

</Project>
